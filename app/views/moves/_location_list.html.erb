<!-- app/views/moves/_location_list.html.erb -->
<turbo-frame id="location_list">
  <ul class="mt-3 border border-gray-300 rounded-md">
    <% if @available_locations.present? %>
      <% @available_locations.each do |location| %>
        <li 
          class="cursor-pointer p-2 hover:bg-gray-200" 
          data-action="click->location#selectMove" 
          data-location-id="<%= location.id %>">
          <%= location.location_with_capacity %>
        </li>
      <% end %>
    <% else %>
      <li class="p-2 text-gray-500">No locations found.</li>
    <% end %>
  </ul>
</turbo-frame>




